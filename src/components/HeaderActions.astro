---
import { languages } from '../i18n/ui'
interface Props {
  langName: string
}
const { langName } = Astro.props as Props
---

<ul class="hidden lg:flex lg:items-center gap-2 text-sm print:hidden">
  <li class="group">
    <a
      href="https://github.com/sponsors/dvgamerr"
      target="_blank"
      rel="noopener noreferrer"
      class="h-8 px-3 inline-flex items-center gap-1 border border-pink-300/60 bg-pink-50 dark:bg-pink-900/40 text-pink-700 dark:text-pink-300 group-hover:text-pink-800 dark:group-hover:text-pink-200 hover:bg-pink-100 dark:hover:bg-pink-800/60 group-focus:text-pink-800 dark:group-focus:text-pink-200 transition"
      aria-label="Sponsor"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="16" width="16" fill="currentColor">
        <path
          d="M12.1 21.35l-1.1-1.01C5.4 15.36 2 12.28 2 8.5 2 6 4 4 6.5 4c1.74 0 3.41.81 4.5 2.09C12.09 4.81 13.76 4 15.5 4 18 4 20 6 20 8.5c0 3.78-3.4 6.86-9 11.84l-1 .91z"
        ></path>
      </svg>
      <span class="uppercase text-xs font-medium mt-0.5 xl:inline hidden">sponsor</span>
    </a>
  </li>
  <li class="group">
    <button
      type="button"
      id="resumeToggle"
      class="h-8 px-3 inline-flex items-center gap-1 border border-gray-300/60 bg-white dark:bg-gray-700/40 hover:bg-gray-50 dark:hover:bg-gray-600/60 transition data-[active=true]:bg-blue-50 data-[active=true]:border-blue-300/60 data-[active=true]:text-blue-700 dark:data-[active=true]:bg-blue-500/10 dark:data-[active=true]:text-blue-300"
      aria-label="Toggle resume mode"
      aria-pressed="false"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        height="16"
        width="16"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
      >
        <path d="M4 4h16v16H4z" opacity=".15"></path>
        <path d="M7 8h10M7 12h10M7 16h7"></path>
      </svg>
      <span class="uppercase text-xs font-medium mt-0.5 xl:inline hidden">resume</span>
    </button>
  </li>
  <li class="group">
    <button
      id="langSwitch"
      type="button"
      data-target={langName === 'en' ? '/th' : '/'}
      class="h-8 px-3 inline-flex items-center gap-1 border border-gray-300/60 bg-white dark:bg-gray-700/40 group-hover:text-[var(--text-color-link)] dark:group-hover:text-[var(--text-color-link)] hover:bg-gray-50 dark:hover:bg-gray-600/60 transition"
      aria-label="Switch language"
    >
      <svg
        viewBox="0 0 24 24"
        width="16"
        height="16"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M2 12h20M12 2a15 15 0 0 1 0 20M12 2a15 15 0 0 0 0 20"></path>
      </svg>
      <span class="uppercase text-xs font-medium mt-0.5 xl:inline hidden">{languages[langName]}</span>
    </button>
  </li>
  <li class="group">
    <button
      type="button"
      id="on-printer"
      class="h-8 px-3 inline-flex items-center gap-1 border border-gray-300/60 bg-white dark:bg-gray-700/40 group-hover:text-[var(--text-color-link)] dark:group-hover:text-[var(--text-color-link)] hover:bg-gray-50 dark:hover:bg-gray-600/60 transition"
      aria-label="Print CV"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        height="16"
        width="16"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M6 9V4h12v5"></path>
        <path d="M6 14H5a3 3 0 0 1-3-3v-1a3 3 0 0 1 3-3h14a3 3 0 0 1 3 3v1a3 3 0 0 1-3 3h-1"></path>
        <path d="M6 17h12v3H6z"></path>
        <path d="M9 14h6"></path>
      </svg>
      <span class="uppercase text-xs font-medium mt-0.5 xl:inline hidden">cv</span>
    </button>
  </li>
  <li class="group">
    <button
      id="themeToggle"
      class="h-8 px-3 inline-flex items-center gap-1 border border-gray-300/60 bg-white dark:bg-gray-700/40 group-hover:text-[var(--text-color-link)] dark:group-hover:text-[var(--text-color-link)] hover:bg-gray-50 dark:hover:bg-gray-600/60 transition"
      aria-label="Toggle theme"
    >
      <svg viewBox="0 0 25 25" height="16" width="16" class="pointer-events-none">
        <path
          class="sun"
          fill-rule="evenodd"
          d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z"
        ></path>
        <path
          class="moon"
          fill-rule="evenodd"
          d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z"
        ></path>
      </svg>
      <span class="sun-text text-xs font-medium xl:inline hidden">Light</span>
      <span class="moon-text text-xs font-medium xl:inline hidden">Dark</span>
    </button>
  </li>
</ul>
<style>
  .sun {
    fill: currentColor;
  }
  .moon {
    fill: transparent;
  }
  .sun-text {
    display: inline-block;
  }
  .moon-text {
    display: none;
  }
  :global(.dark) .sun {
    fill: transparent;
  }
  :global(.dark) .moon {
    fill: currentColor;
  }
  :global(.dark) .sun-text {
    display: none;
  }
  :global(.dark) .moon-text {
    display: inline-block;
  }
</style>
<script>
  const S = { printBtn: 'on-printer', themeToggle: '#themeToggle', langSwitch: 'langSwitch', resumeToggle: 'resumeToggle' }
  function initPrint() {
    const b = document.getElementById(S.printBtn)
    if (!b) return
    b.addEventListener('click', (e) => {
      e.preventDefault()
      print()
    })
  }
  function initLang() {
    const b = document.getElementById(S.langSwitch)
    if (!b) return
    b.addEventListener('click', (e) => {
      e.preventDefault()
      const target = b.getAttribute('data-target')
      if (target) window.location.href = target
    })
  }
  function initResume() {
    const btn = document.getElementById(S.resumeToggle)
    if (!btn) return
    const url = new URL(window.location.href)
    const isOn = url.searchParams.get('mode') === 'resume'
    if (isOn) {
      btn.setAttribute('data-active', 'true')
      btn.setAttribute('aria-pressed', 'true')
    }
    btn.addEventListener('click', (e) => {
      e.preventDefault()
      const current = new URL(window.location.href)
      const nowOn = current.searchParams.get('mode') === 'resume'
      if (nowOn) current.searchParams.delete('mode')
      else current.searchParams.set('mode', 'resume')
      window.location.href = current.toString()
    })
  }
  function initTheme() {
    const btn = document.querySelector(S.themeToggle)
    if (!btn) return
    const stored = localStorage.getItem('theme')
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
    let theme = stored === 'dark' || stored === 'light' ? stored : prefersDark ? 'dark' : 'light'
    const root = document.documentElement
    const apply = (t) => {
      if (t === 'dark') {
        root.classList.add('dark')
        root.classList.remove('light')
      } else {
        root.classList.remove('dark')
        root.classList.add('light')
      }
      localStorage.setItem('theme', t)
    }

    btn.addEventListener('click', (e) => {
      e.preventDefault()
      theme = theme === 'dark' ? 'light' : 'dark'
      apply(theme)
    })
  }
  const init = () => {
    initPrint()
    initLang()
    initResume()
    initTheme()
  }
  if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', init)
  else init()
</script>
