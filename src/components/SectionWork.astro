---
import { getLangFromUrl } from '../i18n/utils'
const langName = getLangFromUrl(Astro.url)

interface Frontmatter {
  title: string
  author?: string
  description?: string
}

interface Props {
  filename: string
}

const { filename } = Astro.props

const posts =
  langName === 'en'
    ? import.meta.glob<Frontmatter>('../components/work/en/*.md')
    : langName === 'th'
      ? import.meta.glob<Frontmatter>('../components/work/th/*.md')
      : []

let htmlMarkdown = ''
const fileRegx = RegExp(filename, 'ig')
for (const post of Object.values(posts)) {
  const postContent = await post()
  if (fileRegx.test(postContent.file)) {
    htmlMarkdown = await postContent.compiledContent()
    break
  }
}
---

<div class="markdown work leading-7 pt-1" set:html={htmlMarkdown} />
