---
import dayjs from 'dayjs'
import { getCollection } from 'astro:content'

// Fetch latest 3 blogs
const blogs = await getCollection('blogs')
const latestBlogs = blogs
  .sort((a, b) => {
    const ad = a.data.date ? a.data.date.getTime() : 0
    const bd = b.data.date ? b.data.date.getTime() : 0
    return bd - ad
  })
  .slice(0, 3)
  .map((post) => {
    const id = post.id
    const slug = id.split('_')[1] || id
    const date = post.data.date ? post.data.date.toISOString() : ''
    return {
      slug,
      date,
      title: post.data.title || '',
      description: post.data.description || '',
    }
  })
---

{
  latestBlogs.length > 0 && (
    <section class="pt-8 md:pt-12 pb-4 md:pb-8 print:hidden" aria-label="Latest blog posts">
      <div class="max-w-7xl mx-auto px-4">
        <div class="md:grid md:grid-cols-12 md:gap-8">
          <div class="md:col-span-3 mb-6 md:mb-0">
            <h2 class="min-w-[175px] text-[1.2rem] -mt-1.5 text-gray-800 dark:text-gray-200 uppercase md:text-right">Latest blogs</h2>
            <div class="mt-1 md:text-right">
              <a href="/blogs" class="text-xs font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">
                View all
              </a>
            </div>
          </div>
          <div class="md:col-span-9">
            <div class="grid sm:grid-cols-1 xl:grid-cols-1 gap-2">
              {latestBlogs.map((item) => (
                <a href={`/blogs/${item.slug}`} class="group flex flex-col rounded-lg backdrop-blur-sm p-0.5 transition">
                  <div class="flex items-start gap-2 flex-wrap mb-2">
                    <div class="flex-1 min-w-[60%]">
                      <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-200 leading-snug uppercase break-words transition-colors group-hover:text-[var(--text-color-link)] dark:group-hover:text-[var(--text-color-link)]">
                        {item.title}
                      </h3>
                    </div>
                  </div>
                  {item.description && (
                    <p class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed line-clamp-4">{item.description}</p>
                  )}
                  {item.date && (
                    <time datetime={item.date} class="mt-1 block text-[11px] text-gray-500 dark:text-gray-500">
                      {dayjs(item.date).format('MMM D, YYYY')}
                    </time>
                  )}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
