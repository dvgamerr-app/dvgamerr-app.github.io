---
import dayjs from 'dayjs'
import { getTranslate } from '../../i18n/utils'
const t = getTranslate(Astro.url)

interface Props {
  experience: any
}

const { experience } = Astro.props
---

<section class="pt-8 md:pt-12 pb-4 md:pb-8 print:hidden">
  <div class="max-w-7xl mx-auto px-4">
    <div class="md:grid md:grid-cols-12 md:gap-8">
      <div class="md:col-span-3 mb-6 md:mb-0">
        <h2 class="min-w-[175px] text-[1.2rem] -mt-1.5 text-gray-800 dark:text-gray-200 uppercase md:text-right">
          {t('project')}
        </h2>
      </div>
      <div class="md:col-span-9">
        <div class="grid sm:grid-cols-2 xl:grid-cols-3 gap-2">
          {
            experience.repos.map((e: any) => (
              <a
                href={e.svn_url}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex flex-col rounded-lg backdrop-blur-sm p-0.5 transition"
              >
                <div class="flex items-start gap-2 flex-wrap mb-2">
                  <span class="inline-flex items-center rounded-md bg-gray-200/70 dark:bg-gray-700/40 text-gray-800 dark:text-gray-200 px-2 pt-0.5 text-[10px] font-semibold tracking-wide uppercase">
                    {dayjs(e.created_at).year()}
                  </span>
                  <div class="flex-1 min-w-[60%]">
                    <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-200 leading-snug uppercase break-words transition-colors group-hover:text-[var(--text-color-link)] dark:group-hover:text-[var(--text-color-link)]">
                      {e.name}
                    </h3>
                  </div>
                  {e.stargazers_count ? (
                    <span class="inline-flex items-center gap-1 rounded-md bg-amber-100 dark:bg-amber-500/20 text-amber-700 dark:text-amber-300 px-2 py-0.5 text-[10px] font-medium">
                      <svg viewBox="0 0 16 16" width="10" height="10" aria-hidden="true" class="fill-current -mt-0.5">
                        <path d="M8 12.027 3.708 14.5l.82-4.781L1.5 6.653l4.797-.696L8 1.75l1.703 4.207 4.797.696-3.028 3.066.82 4.781L8 12.027Z" />
                      </svg>
                      <span class="pt-0.5">{e.stargazers_count}</span>
                    </span>
                  ) : (
                    <span />
                  )}
                </div>
                {e.description && <p class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed line-clamp-4">{e.description}</p>}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
