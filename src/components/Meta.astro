---
interface Props {
  title: string;
  desc: string;
  image?: string;
  website?: string;
  type?: string;
  section?: string;
  locale?: string;
  twitterUsername?: string;
  themeColor?: string;
  canonicalUrl?: string;
  keywords?: string[];
}

const {
  title,
  desc,
  image = "/fb-social.jpg",
  website = "https://dvgamerr.app",
  type = "article",
  section = "RESUME",
  locale = "en_US",
  twitterUsername = "dvgamerr",
  themeColor = "#C84B31",
  canonicalUrl,
  keywords = ["kananek", "t.", "kananek-thongkam", "thongkam", "tk", "resume", "kem", "kanane", "kt"],
} = Astro.props;

const date = new Date().toISOString();
const actualCanonicalUrl = canonicalUrl || website;
const keywordsString = keywords.join(",");
---

<!-- Primary Meta Tags -->
<meta charset="UTF-8" />
<meta name="title" content={title} />
<meta name="description" content={desc} />
<meta name="viewport" content="width=device-width, user-scalable=no" />
<meta name="generator" content={Astro.generator} />
<meta name="application-name" content={title} />
<meta name="keywords" content={keywordsString} />
<meta name="author" content={twitterUsername} />
<meta name="theme-color" content={themeColor} />

<!-- iOS Meta Tags -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content={title} />

<!-- Android Meta Tags -->
<meta name="mobile-web-app-capable" content="yes" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:title" content={title} />
<meta property="og:description" content={desc} />
<meta property="og:url" content={actualCanonicalUrl} />
<meta property="og:site_name" content={title} />
<meta property="og:locale" content={locale} />
<meta property="og:image" content={image} />
<meta property="og:image:alt" content={title} />
<meta property="og:updated_time" content={date} />

<!-- Article Specific (if type is article) -->
{type === "article" && (
  <>
    <meta property="article:publisher" content={`https://twitter.com/${twitterUsername}`} />
    <meta property="article:author" content={`https://twitter.com/${twitterUsername}`} />
    <meta property="article:section" content={section} />
    <meta property="article:published_time" content={date} />
    <meta property="article:modified_time" content={date} />
  </>
)}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={`@${twitterUsername}`} />
<meta name="twitter:creator" content={`@${twitterUsername}`} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={desc} />
<meta name="twitter:image" content={image} />

<!-- Canonical URL -->
<link rel="canonical" href={actualCanonicalUrl} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/icon-64.webp" />
<link rel="apple-touch-icon" href="/icon-180.webp" sizes="180x180" />
<link rel="manifest" href="/manifest.json" />

<!-- Preconnect -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>